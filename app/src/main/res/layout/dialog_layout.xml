<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/dialogConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/green_rounded_corners"
        android:paddingStart="25dp"
        android:paddingTop="9dp"
        android:paddingEnd="25dp"
        android:paddingBottom="9dp"
        app:layout_constraintStart_toStartOf="@+id/dialogTextView"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextView"
        app:srcCompat="@drawable/tick" />

    <ImageButton
        android:id="@+id/dialogCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/red_rounded_corners"
        android:paddingStart="25dp"
        android:paddingTop="7dp"
        android:paddingEnd="25dp"
        android:paddingBottom="7dp"
        app:layout_constraintEnd_toEndOf="@+id/dialogTextView"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextView"
        app:srcCompat="@drawable/x" />

    <TextView
        android:id="@+id/dialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save current task?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>